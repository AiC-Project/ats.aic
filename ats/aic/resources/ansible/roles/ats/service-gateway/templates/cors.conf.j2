header_filter_by_lua_block {
    local allowedHost = 'http://localhost:9080'
    ngx.header['Access-Control-Allow-Origin'] = allowedHost
    ngx.header['Access-Control-Allow-Credentials'] = 'true'
    ngx.header['Access-Control-Allow-Methods'] = 'GET, POST, OPTIONS, DELETE, PUT'
    ngx.header['Access-Control-Allow-Headers'] = 'DNT,X-CustomHeader,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Authorization'
}

if ($request_method = 'OPTIONS') {
    add_header 'Access-Control-Max-Age' 1728000;
    add_header 'Content-Type' 'text/plain charset=UTF-8';
    add_header 'Content-Length' 0;
    return 204;
}
